# Production Environment Configuration
# This will be used in ECS containers with additional environment variables from AWS

# Database Configuration
DATABASE_TYPE=postgresql
NODE_ENV=production

# PostgreSQL Configuration (values will be overridden by ECS environment variables)
DB_HOST=${DATABASE_HOST}
DB_PORT=${DATABASE_PORT}
DB_USERNAME=${DATABASE_USERNAME}
DB_PASSWORD=${DATABASE_PASSWORD}
DB_NAME=${DATABASE_NAME}
DB_SCHEMA=public

# SSL Configuration for production
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Behavior (production settings)
DB_SYNCHRONIZE=true
DB_LOGGING=false      # Disable SQL logging in production
DB_MIGRATIONS_RUN=true

# Connection Pool Settings (production optimized)
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_ACQUIRE_TIMEOUT=60000
DB_IDLE_TIMEOUT=600000

# Health Check Settings
DB_HEALTH_TIMEOUT=10000
DB_HEALTH_INTERVAL=30000

# Retry Configuration
DB_RETRY_ATTEMPTS=5
DB_RETRY_DELAY=2000

# Application Settings
PORT=${PORT}

# Mock Database Settings (not used in production)
MOCK_DB_VERBOSE=false
MOCK_DB_SIMULATE_LATENCY=false
MOCK_DB_LATENCY_MS=0
MOCK_DB_SEED=false

# Database Health Check
DB_HEALTH_TIMEOUT=5000
DB_HEALTH_INTERVAL=30000

# Database Retry Configuration
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# Security Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=api

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200,https://opn-commerce.swu-ecmms.com