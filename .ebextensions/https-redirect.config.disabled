files:
  /etc/nginx/conf.d/https-redirect.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 8080;
          return 301 https://$host$request_uri;
      }

container_commands:
  01_reload_nginx:
    command: "service nginx reload"
    leader_only: true