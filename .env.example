# Application Configuration
NODE_ENV=development
PORT=8091

# Database Configuration
DATABASE_TYPE=mock
# DATABASE_TYPE=postgresql

# PostgreSQL Configuration (when DATABASE_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-password-here
DB_NAME=opn_commerce
DB_SCHEMA=public

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# Database SSL Configuration
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Database Sync & Logging (Development only)
DB_SYNCHRONIZE=true
DB_LOGGING=false
DB_MIGRATIONS_RUN=false

# Mock Database Configuration
MOCK_DB_VERBOSE=false
MOCK_DB_SIMULATE_LATENCY=false
MOCK_DB_LATENCY_MS=10
MOCK_DB_SEED=true

# Database Health Check
DB_HEALTH_TIMEOUT=5000
DB_HEALTH_INTERVAL=30000

# Database Retry Configuration
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# Security Configuration
JWT_SECRET=change-me-to-a-secure-secret-key-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=api

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
