# ============================================
# DEVELOPMENT CONFIGURATION - READY TO USE
# ============================================
# Copy this file to .env and run:
# npm install && npm run start:dev
# ============================================

# Application Configuration
NODE_ENV=development
PORT=8091

# Database Configuration
# Using mock (in-memory) database for instant setup
DATABASE_TYPE=mock

# Mock Database Settings - Ready to use with test data
MOCK_DB_VERBOSE=false
MOCK_DB_SIMULATE_LATENCY=false
MOCK_DB_LATENCY_MS=0
MOCK_DB_SEED=true

# Security Configuration
# Pre-configured for local development (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-secret-key-opn-commerce-2024
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# API Documentation
# Swagger UI available at http://localhost:8091/api
API_DOCS_ENABLED=true
API_DOCS_PATH=api

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# CORS Configuration
# Configured for common frontend ports
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:4200

# ============================================
# POSTGRESQL CONFIGURATION (OPTIONAL)
# ============================================
# Uncomment and configure to use PostgreSQL instead of mock database:
# DATABASE_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=your-password-here
# DB_NAME=opn_commerce
# DB_SCHEMA=public
# DB_SYNCHRONIZE=true
# DB_LOGGING=false
